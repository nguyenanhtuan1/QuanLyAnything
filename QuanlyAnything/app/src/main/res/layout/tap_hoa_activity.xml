<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_screen_tap_hoa">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_bar"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_back_blue"
        android:text="@string/text_back"
        android:textAllCaps="false"
        android:textColor="@color/bg_text_color_presed_blue_white"
        android:textSize="@dimen/text_size_normal_default"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ln_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">


        <Button
            android:id="@+id/btn_store"
            android:layout_width="@dimen/with_button_function"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/bg_btn_choose_function"
            android:gravity="center"
            android:text="@string/text_store"
            android:textAllCaps="false"
            android:textColor="@color/bg_text_color_selected_blue_white"
            android:textSize="@dimen/text_size_title_option"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_sell"
            android:layout_width="@dimen/with_button_function"
            android:layout_height="@dimen/height_button_function"
            android:layout_marginStart="@dimen/margin_space_button_function"
            android:background="@drawable/bg_btn_choose_function"
            android:text="@string/text_sell"
            android:textAllCaps="false"
            android:textColor="@color/bg_text_color_selected_blue_white"
            android:textSize="@dimen/text_size_title_option"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_report"
            android:layout_width="@dimen/with_button_function"
            android:layout_height="@dimen/height_button_function"
            android:layout_marginStart="@dimen/margin_space_button_function"
            android:background="@drawable/bg_btn_choose_function"
            android:text="@string/text_report"
            android:textAllCaps="false"
            android:textColor="@color/bg_text_color_selected_blue_white"
            android:textSize="@dimen/text_size_title_option"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_history"
            android:layout_width="@dimen/with_button_function"
            android:layout_height="@dimen/height_button_function"
            android:layout_marginStart="@dimen/margin_space_button_function"
            android:background="@drawable/bg_btn_choose_function"
            android:text="@string/text_history"
            android:textAllCaps="false"
            android:textColor="@color/bg_text_color_selected_blue_white"
            android:textSize="@dimen/text_size_title_option"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/white_color"
        app:layout_constraintTop_toBottomOf="@+id/ln_content_btn" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_tap_hoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line" />

</android.support.constraint.ConstraintLayout>