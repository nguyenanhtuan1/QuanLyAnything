<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/margin_left_right_default"
    android:paddingStart="@dimen/margin_left_right_default">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_btn_choose_function"
        android:orientation="horizontal"
        android:padding="1dp">

        <Button
            android:id="@+id/btn_import_history"
            android:layout_width="80dp"
            android:layout_height="@dimen/default_height_edt"
            android:background="@drawable/bg_btn_choose_has_sell"
            android:gravity="center"
            android:text="@string/text_import_product"
            android:textAllCaps="false"
            android:textColor="@color/bg_text_color_selected_blue_white"
            android:textSize="@dimen/text_size_normal_default" />

        <Button
            android:id="@+id/btn_sell_history"
            android:layout_width="80dp"
            android:layout_height="@dimen/default_height_edt"
            android:background="@drawable/bg_btn_choose_right"
            android:gravity="center"
            android:text="@string/text_sell"
            android:textAllCaps="false"
            android:textColor="@color/bg_text_color_selected_blue_white"
            android:textSize="@dimen/text_size_normal_default" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />
</LinearLayout>