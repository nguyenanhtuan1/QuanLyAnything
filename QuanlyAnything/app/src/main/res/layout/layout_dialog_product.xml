<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_dialog"
    android:gravity="center"
    android:paddingEnd="6dp"
    android:paddingStart="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white_color"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white_color"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_logout"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />

                <Button
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_btn_pressed_green_greentrans"
                    android:text="Lưu lại"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/v_carview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="#208ad0ff"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:id="@+id/imv_photo_product"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_margin="4dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop" />
                </android.support.v7.widget.CardView>


                <Button
                    android:layout_width="42dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/v_carview"
                    android:background="@drawable/bg_btn_pressed_blue_bluetrans"
                    android:gravity="center"
                    android:text="Chọn"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/name_product"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_normal_default" />

                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center_vertical"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:scrollbars="horizontal"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal_default" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Đơn vị tiền:"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_normal_default" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:paddingEnd="10dp"

                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />

                <Button
                    android:layout_width="42dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="100dp"
                    android:background="@drawable/bg_btn_pressed_blue_bluetrans"
                    android:gravity="center"
                    android:text="Chọn"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/text_soluong"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_normal_default" />

                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal_default" />

                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:hint="đơn vị"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />

                <Button
                    android:layout_width="42dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_btn_pressed_blue_bluetrans"
                    android:gravity="center"
                    android:text="Chọn"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Tổng giá mua:"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_normal_default" />


                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:hint="giá / tổng số lượng"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/wholesale_price_product"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_normal_default" />


                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:hint="giá"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal_default" />

                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:hint="đơn vị"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />

                <Button
                    android:layout_width="42dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_btn_pressed_blue_bluetrans"
                    android:gravity="center"
                    android:text="Chọn"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/retail_price_product"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_normal_default" />


                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:hint="giá"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal_default" />

                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:hint="đơn vị"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />

                <Button
                    android:layout_width="42dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_btn_pressed_blue_bluetrans"
                    android:gravity="center"
                    android:text="Chọn"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:text="Mã sản phẩm:"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_normal_default" />


                <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_input_product"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/transparent_dialog"
                    android:textSize="@dimen/text_size_normal_default" />


                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_btn_pressed_blue_bluetrans"
                    android:gravity="center"
                    android:text="Quoét"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_normal_default" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>