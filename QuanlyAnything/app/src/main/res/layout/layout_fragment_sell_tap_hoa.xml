<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/margin_left_right_default"
    android:paddingStart="@dimen/margin_left_right_default">

    <Button
        android:id="@+id/btn_add_more_bill"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/margin_left_right_default"
        android:background="@drawable/bg_btn_pressed_blue_bluetrans_stroke_orange"
        android:text="@string/text_add_bill"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_normal_default" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rcv_bill_list"
        android:layout_height="match_parent"/>


</LinearLayout>