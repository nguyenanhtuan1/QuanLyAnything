<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/margin_left_right_default"
        android:layout_marginStart="@dimen/margin_left_right_default"
        app:cardBackgroundColor="@color/white_color"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selected_blue_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_photo_product"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/white_color"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/name_product"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:id="@+id/tv_name_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_content_wholesale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/text_quantity_wholesale"
                        android:textSize="@dimen/text_size_normal_default" />

                    <Button
                        android:id="@+id/btn_minus_wholesale"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_btn_pressed_blue_bluetrans_circle"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                        android:id="@+id/edt_input_quantity_wholesale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edt_input_product"
                        android:gravity="center"
                        android:hint="0"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <Button
                        android:id="@+id/btn_plus_wholesale"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_btn_pressed_blue_bluetrans_circle"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:id="@+id/tv_unit_quantity_wholesale"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/text_quantity_retail"
                        android:textSize="@dimen/text_size_normal_default" />

                    <Button
                        android:id="@+id/btn_minus_retail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_btn_pressed_blue_bluetrans_circle"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                        android:id="@+id/edt_input_quantity_retail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edt_input_product"
                        android:gravity="center"
                        android:hint="0"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <Button
                        android:id="@+id/btn_plus_retail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_btn_pressed_blue_bluetrans_circle"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:id="@+id/tv_unit_quantity_retail"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>