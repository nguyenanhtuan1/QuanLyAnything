<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/margin_left_right_default"
        android:layout_marginStart="@dimen/margin_left_right_default"
        app:cardBackgroundColor="@color/white_color"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selected_blue_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_photo_product"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/white_color"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/name_product"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:id="@+id/tv_name_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_item_product"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="@string/text_unit_product"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:id="@+id/tv_unit_product"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/default_height_edt"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edt_input_product"
                        android:gravity="center"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/transparent_dialog"
                        android:textSize="@dimen/text_size_normal_default"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_choose_unit_product"
                        android:layout_width="@dimen/with_btn_choose"
                        android:layout_height="30dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_btn_pressed_blue_bluetrans"
                        android:gravity="center"
                        android:text="@string/text_choose"
                        android:textAllCaps="false"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size_normal_default" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_content_wholesale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="6dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/text_quantity"
                        android:textSize="@dimen/text_size_normal_default" />


                    <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                        android:id="@+id/edt_input_quantity"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/default_height_edt"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt_input_product"
                        android:gravity="center"
                        android:hint="0"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/tv_unit_quantity"
                        android:singleLine="true"
                        android:text="Thung"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/price_import"
                        android:textSize="@dimen/text_size_normal_default" />

                    <quanly_anything_you_want.manage.com.quanlyanything.custom_view.QLEditText
                        android:id="@+id/edt_input_price"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/default_height_edt"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt_input_product"
                        android:gravity="center"
                        android:hint="0"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:id="@+id/tv_currency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="VND"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/total_price"
                        android:textSize="@dimen/text_size_normal_default" />

                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_height_edt"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_btn_grey_border"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal_default"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>